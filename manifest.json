{
  "manifest_version": 2,

  "name": "Audicle",
  "options_page": "options.html",
  "description": "Audicle Extension Test.",
  "version": "1.0",
  "browser_action": {
    "default_icon": "audicle_extension_logo.png",
    "default_popup": "index.html"
  },
  "permissions": [
      "tabs"
    ],
  "background": {
     "scripts": ["js/background.js"],
     "persistent": false
  },
  "externally_connectable": {
    "matches": ["*://peaceful-fjord-8585.herokuapp.com/*"]
}
}
